{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "app/layout.ts",
    "app/page.ts",
    "lib/googleSheetServices.ts",
    "next-env.d.ts",
    "tailwind.config.ts",
    ".next/types/**/*.ts"
, "app/page.tsx", "app/layout.tsx", "app/sales/page.tsx", "app/expenses/page.tsx", "app/dashboard/page.tsx", "app/components/navbar.tsx", "app/balance/page.tsx", "app/api/sales/route.ts", "app/api/expenses/route.ts", "app/api/balance/route.ts", "app/advances/page.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
